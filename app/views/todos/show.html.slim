.container
  .row
    .col
      h1
        |詳細表示
    .col.row
      .col
        = link_to "編集", edit_todo_path, class: "btn btn-warning"
      .col
        = button_to "削除", todo_path(@todo.id), method: :delete, class: "btn btn-danger"
  table.table
    thead 
      tr 
        th="項目名"
        th="詳細"
    tbody 
      tr 
        th="名前"
        td = @todo.name
      tr 
        th="説明文"
        td = @todo.description
      tr 
        th="進捗"
        td = @todo.status.name
      tr 
        th="優先度"
        td = @todo.priority.name
      tr 
        th="期限"
        td = @todo.deadline.strftime('%Y/%m/%d %H:%M')